<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:onClick="logMsg"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/f_container"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:background="@drawable/mode"
            android:layout_gravity="bottom|center_horizontal"
            />

        <ImageButton
            android:id="@+id/like_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:background="@drawable/like47"
            android:layout_marginBottom="70dp"
            android:alpha="0"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="logMsg"
            />

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:background="@drawable/close33"
            android:layout_marginBottom="10dp"
            android:alpha="0"
            android:layout_marginRight="70dp"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="logMsg"
            />

        <ImageButton
            android:id="@+id/appr_btn"
            android:layout_width="30dp"
            android:alpha="0"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:background="@drawable/approve9"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="logMsg"
            />
    </FrameLayout>

</RelativeLayout>
